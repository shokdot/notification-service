generator notificationClient {
    provider = "prisma-client-js"
}

datasource notificationDb {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Notification {
    id        String   @id @default(uuid())
    userId    String
    type      String
    message   String
    isRead    Boolean  @default(false)
    createdAt DateTime @default(now())
}
